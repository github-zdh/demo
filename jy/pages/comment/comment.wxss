.shop_info_view {
  height: 100rpx;
  display: flex;
  flex-direction: row;
}

.shop_logo {
  width: 10%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.shop_logo_icon {
  height: 50rpx;
  width: 50rpx;
}

.shop_name {
  font-size: 34rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.photo_view {
  height: 200rpx;
  display: flex;
  align-items: center;
}

.each_photo_view {
  height: 180rpx;
  width: 180rpx;
  border: 2rpx dashed gray;
  margin-left: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add_photo_icon {
  height: 50rpx;
  width: 50rpx;
}

.choose_photo_view {
  height: 180rpx;
  width: 180rpx;
  margin-left: 40rpx;
  position: relative;
}

.choose_photo {
  height: 100%;
  width: 100%;
}

.deleteImg {
  width: 50rpx;
  height: 50rpx;
  z-index: 2;
  top: 0;
  right: 0;
  position: absolute;
}

.comment_split {
  width: 100%;
  height: 8px;
  background: #f7f7f7;
}

.comment_content {
  height: 200rpx;
}

.comment_content_text {
  width: 90%;
  height: 200rpx;
  margin-left: 40rpx;
  margin-top: 10rpx;
  font-size: 24rpx;
}

.comment_button {
  padding-top: 50rpx;
  height: 120rpx;
  background: #f8f8f8;
}

.comment_button_save {
  color: #fff;
  background: #ff6b67;
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.comment_grade {
  margin: 20rpx 0rpx;
}

.comment_grade_title {
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.comment_grade_icon {
  margin: 0rpx 30rpx;
  height: 30rpx;
  width: 30rpx;
}

.comment_grade_text {
  font-size: 32rpx;
  font-weight: 500;
}

.comment_grade_detail {
  display: flex;
  flex-direction: column;
}

.label_view {
  font-size: 30rpx;
  color: #666;
  margin: 10rpx 0rpx;
}

.label_text {
  margin: 0rpx 20rpx;
}

.product_grade {
  display: flex;
  flex-direction: row;
  margin: 20rpx 0rpx;
}

.product_name {
  font-size: 24rpx;
  width: 80%;
  margin-left: 20rpx;
  display: flex;
}

.good_bad_view {
  display: flex;
  align-items: center;
}

.good_icon {
  height: 30rpx;
  width: 30rpx;
}

.bad_icon {
  height: 30rpx;
  width: 30rpx;
  margin-left: 30rpx;
}

.star_choose {
  color: #fd0;
  margin-right: 10rpx;
}

.star_nochoose {
  color: #979797;
  margin-right: 10rpx;
}
