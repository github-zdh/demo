.swiper-tab {
  width: 100%;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}

.swiper-tab-item {
  width: 30%;
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
}

.active {
  font-weight: 700;
  color: #333;
  border-bottom: 6rpx solid #ff6863;
}

swiper {
  text-align: center;
  height: calc(100vh - 108rpx);
}

.tab_text {
  width: 100rpx;
}

.top-split {
  height: 20rpx;
  background: #f7f7f7;
}

.order_item {
  display: flex;
  flex-direction: row;
}

.order_item_left {
  width: 15%;
  margin-top: 20rpx;
}

.left_logo {
  height: 50rpx;
  width: 50rpx;
}

.order_item_right {
  width: 85%;
  display: flex;
  flex-direction: column;
}

.right_top {
  /* height: 30%; */
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
}

.top_shop_left {
  width: 82%;
  display: flex;
  align-items: center;
}

.top_shop_name {
  font-size: 34rpx;
  font-weight: 500;
}

.top_next_icon {
  margin-left: 20rpx;
  height: 20rpx;
  width: 10rpx;
}

.top_order_status {
  font-size: 30rpx;
  color: #999;
}

.info-split {
  height: 2rpx;
  background: #f7f7f7;
  margin: 5rpx 0rpx;
}

.right_middle {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.middle_line1 {
  display: flex;
  flex-direction: row;
  margin-top: 15rpx;
}

.line1_name {
  font-size: 30rpx;
  color: #999;
  width: 89%;
  text-align: left;
}

.line1_number {
  font-size: 30rpx;
  color: #999;
}

.middle_line2 {
  display: flex;
  flex-direction: row;
  margin: 15rpx 0rpx;
}

.line2_text {
  font-size: 30rpx;
  color: #999;
  width: 560rpx;
  text-align: left;
}

.middle_line3 {
  display: flex;
  flex-direction: row;
}

.line3_text {
  font-size: 30rpx;
  color: #999;
  width: 560rpx;
  text-align: left;
}

.right_bottom {
  margin: 20rpx 0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.bottom_button {
  font-size: 30rpx;
  color: #999;
  border: 1rpx solid #999;
  height: 50rpx;
  width: 150rpx;
  line-height: 50rpx;
  margin-left: 72%;
}

.order-split {
  height: 16rpx;
  background: #f7f7f7;
  margin-left: -200rpx;
}

.no_order_view {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 200rpx;
}

.no_order_img {
  margin-left: 50rpx;
  width: 400rpx;
  height: 300rpx;
}

.no_order_text {
  font-size: 34rpx;
  font-weight: 500;
  color: #999;
  margin: 20rpx 0rpx;
}

.no_order_button {
  color: #fff;
  background: #ff6b67;
  width: 35%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.no-more {
  text-align: center;
  margin: 2% 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.no-more-text {
  color: gray;
  font-size: 14px;
  width: 100%;
}

.display {
  display: none;
}

.wait {
  color: #f90;
}

action-sheet-cancel, action-sheet-item {
  color: #ff6b67;
  font-size: 34rpx;
  padding: 20rpx 0rpx;
}

.refresh {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 34rpx;
  color: gray;
}
