/* pages/position/index.wxss */

page {
  background: rgba(245, 245, 245, 1);
}

.search {
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  overflow: hidden;
  /* background: #ff6b67; */
  background: rgba(245, 245, 245, 1);
  justify-content: center;
  align-items: center;
}

.search .iconSearch {
  background: rgba(231, 231, 231, 1);
  border-radius: 13px;
  line-height: 32rpx;
  height: 32rpx;
  padding: 16rpx;
  justify-content: center;
  align-items: center;
  width: calc(100vw - 76rpx);
  /* width: calc( 100vw - 232rpx ); */
  font-size: 26rpx;
}

.search .iconSearch icon {
  margin-right: 10rpx;
  margin-top: 17rpx;
}

.searchHeight {
  height: 88rpx;
  background: rgba(245, 245, 245, 1);
}

.search .iconSearch text {
  color: rgba(153, 153, 153, 1);
}

.search .iconSearch  input {
  border: 0;
  margin: 0;
  padding: 0;
  line-height: 100%;
  text-align: left;
}

.inputSearch .iconSearch {
  justify-content: flex-start;
}

.inputSearchContent {
  flex-grow: 1;
  display: none;
}

.inputSearch .iconSearch icon {
  margin-left: 10rpx;
}

.inputSearch text {
  display: none;
}

.fa-map-marker {
  color: red;
  display: inline-block;
  margin-right: 10rpx;
}

.noCity {
  padding: 30rpx;
  color: #666;
}

.inputSearch .inputSearchContent {
  display: block;
}

.cityList .dl .dt, .cityList .dl .dd {
  height: 76rpx;
  line-height: 76rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
}

.cityList .dl .dt {
  background: rgba(245, 245, 245, 1);
}

.cityList .dl .dd {
  background: rgba(255, 255, 255, 1);
  border-bottom: 1rpx solid rgba(245, 245, 245, 1);
}

.cityList .dl .ul {
  padding: 16rpx 64rpx 16rpx 32rpx;
}

.cityList .dl .ul .li {
  width: 30%;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  background: rgba(255, 255, 255, 1);
  margin: 10rpx 3% 10rpx 0;
}

.cityList .dl .ul .li:nth-of-type(3n) {
  margin-right: 0;
}

.PinyinPosition {
  right: 0;
  padding-top: 2rpx;
  top: 168rpx;
  height: calc(100vh - 90rpx - 80rpx);
  /* height: 100vh; */
  width: 60rpx;
  justify-content: space-between;
  flex-wrap: wrap;
  -ms-flex-wrap: wrap;
  background: #fff;
  /* border-left:1px solid #000; */
  font-size: 24rpx;
}

.PinyinPosition .ul {
  padding-bottom: 10rpx;
  flex-grow: 1;
  align-items: flex-end;
  display: flex;
  flex-wrap: wrap;
  -ms-flex-wrap: wrap;
  width: 100%;
  /* background: #8f3636; */
}

.PinyinPosition .li {
  /* height: calc( 100/26/100 ); */
  overflow: hidden;
  width: 100%;
  /* background: pink; */
  justify-content: center;
  align-items: center;
  /* padding:6rpx 0; *//* border-bottom: 1rpx solid #000; *//* box-sizing: border-box; */
}

