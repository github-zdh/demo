.locationPosition {
  background: #fff;
  /* padding:0 32rpx; */
  width: 100vw;
}

.locationPosition .header {
  height: 80rpx;
  width: calc(100% - 86rpx);
  padding: 0 64rpx 0 32rpx;
  font-size: 32rpx;
  justify-content: space-between;
  align-items: center;
}

.locationPosition .header .change, .locationPosition .noCity {
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
}

.locationPosition .cityList .dl .ul .li {
  border: 1rpx solid #f1f1f1;
  border-radius: 5rpx;
}

.locationPosition .content {
  padding-right: 32rpx;
}
