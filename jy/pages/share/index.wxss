/* pages/share/index.wxss */
.shareBox{
  background:rgba(255,118,114,1);
  padding:1rpx;
}
.shareRecordBg{
  width:100%;
}
.shareFree{
  top:44%;
  left:50%;
  transform: translate(-50%);
  -webkit-transform: translate(-50%);
  width:640rpx;
  height: 104rpx;
  line-height: 100rpx;
  color:#fff;
}
.shareFree .icon{
  width:12rpx;
  vertical-align: middle;
  margin-left: 40rpx;
}
.active{
  height: 40rpx;
  line-height: 40rpx;
  padding:0 20rpx;
  right:0;
  top:32rpx;
background:rgba(255,255,255,0.3);
border-radius:10px 0px 0px 10px;
  color:rgba(229,82,78,1);
}
.shareContent{
  margin:0 32rpx;
  background: #fff;
  border-radius:40rpx;
  padding:40rpx;
  padding-top:0;
  margin-bottom:66rpx;
  margin-top:66rpx;
}
.shareContent .title{
  width:374rpx;
  height: 100rpx;
  margin:0 auto;
  transform: translateY(-50%);
  -webkit-transform: translateY(-50%); 
}

.friendsTitle{
  color:rgba(51,51,51,1);
margin-top:-10rpx;

}
.friendsul .li{
  color:rgba(153,153,153,1);
  margin:10rpx 0;
}
.dotted{
  border-right: 2px dotted rgba(255,118,114,1);
  margin-right: 1px;
  top:115rpx;
  left:59rpx;
  /* z-index: -1; */
  height: 115rpx;
}
.successul{
  flex: 1;
  margin-top:70rpx;
}
.successul:first-child{
  margin-top: 0;
}

.successIcon{
  width:120rpx;
  height:120rpx;
  flex:0 0 120rpx;
}
.successDesc{
  margin-left: 32rpx;
}
.successDesc .title{
  color:rgba(51,51,51,1);
}
.shareFree button{
  border:0;
  background: transparent;
  box-shadow: 0;
}
button::after{
border: none;
}
.successDesc .description{
  margin-top:8rpx;
  color:rgba(153,153,153,1);
}
.noRecord{
  padding:30rpx;
  color:rgba(153,153,153,1);
}
button[plain][disabled]{
  color: #fff;
  background-color:transparent;
}