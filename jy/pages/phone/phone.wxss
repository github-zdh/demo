  text-align: center;
}

.login_button {
  color: #fff;
  background: #ff6b67;
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.wx_login_button {
  color: #ff6b67;
  font-size: 28rpx;
  margin-top: 30rpx;
  background: #f0f0f0;
  width: 200rpx;
}

.wx_login_button::after {
  border: none;
}

.wechat_text {
  text-align: center;
  color: #999;
  font-size: 28rpx;
