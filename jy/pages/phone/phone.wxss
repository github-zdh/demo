.container {
  height: 100vh;
  background: #f0f0f0;
}

.top_split {
  height: 30rpx;
  background: #f0f0f0;
}

.login_info {
  height: 200rpx;
  background: white;
}

.login_line1 {
  margin-left: 40rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.login_mobile {
  font-size: 28rpx;
  width: 440rpx;
}

.msg_button {
  font-size: 28rpx;
