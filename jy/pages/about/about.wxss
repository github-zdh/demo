.about_view {
  height: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.logo_img {
  width: 120rpx;
  height: 120rpx;
}

.version {
  color: #333;
  margin: 20rpx;
}

.function_view {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.about_text {
  height: 100rpx;
  line-height: 100rpx;
  font-weight: 500;
  color: #333;
  margin-left: 50rpx;
}

.next_logo {
  height: 20rpx;
  width: 20rpx;
  margin-left: 500rpx;
}

.function-split {
  height: 5rpx;
  background: #f8f8f8;
}

.about_bottom {
  height: 420rpx;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 300rpx;
}

.about_bottom_view {
  color: #999;
}

.protocol {
  color: #007aff;
}
