.time_view {
  height: 80rpx;
  background: #f7f7f7;
  display: flex;
  align-items: center;
}

.time {
  background: lightgray;
  width: 230rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 0rpx 50rpx 50rpx 0rpx;
  font-size: 30rpx;
  color: white;
}

.record_item {
  display: flex;
  flex-direction: row;
}

.record_item_left {
  width: 15%;
  margin-top: 20rpx;
  margin-left: 30rpx;
}

.left_logo {
  height: 50rpx;
  width: 50rpx;
}

.record_item_right {
  width: 85%;
  display: flex;
  flex-direction: column;
}

.right_top {
  /* height: 30%; */
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
}

.top_shop_left {
  width: 82%;
  display: flex;
  align-items: center;
}

.top_shop_name {
  font-size: 34rpx;
  font-weight: 500;
}

.top_next_icon {
  margin-left: 20rpx;
  height: 20rpx;
  width: 10rpx;
}

.top_record_status {
  font-size: 30rpx;
  color: #999;
}

.info-split {
  height: 2rpx;
  background: #f7f7f7;
  margin-top: 20rpx;
}

.right_middle {
  display: flex;
  flex-direction: column;
}

.middle_line1 {
  display: flex;
  flex-direction: row;
  margin-top: 15rpx;
}

.line1_name {
  font-size: 30rpx;
  color: #999;
  width: 89%;
  text-align: left;
}

.middle_line2 {
  display: flex;
  flex-direction: row;
  margin: 15rpx 0rpx;
}

.line2_text {
  font-size: 30rpx;
  color: #999;
  width: 560rpx;
  text-align: left;
}

.right_bottom {
  margin: 20rpx 0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 50rpx;
}

.bottom_button {
  background: #ff6b67;
  font-size: 24rpx;
  color: white;
  height: 50rpx;
  width: 150rpx;
  line-height: 50rpx;
  margin-left: 72%;
  text-align: center;
}

