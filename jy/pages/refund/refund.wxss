.container {
  display: flex;
  flex-direction: row;
}

.refund_left_view {
  width: 10%;
  display: flex;
  justify-content: center;
}

.left_line {
  border-right: 4rpx dashed #ff6b67;
  width: 0;
}

.refund_right_view {
  width: 90%;
}

.each_item_view {
  display: flex;
  flex-direction: column;
  margin: 10rpx 0rpx;
}

.item_line1 {
  display: flex;
  flex-direction: row;
}

.line1_left {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  width: 60%;
  color: #333;
}

.line_tips {
  background: #ff6b67;
  height: 10px;
  width: 10px;
  border-radius: 50%;
  margin-left: calc( -5vw - 5px);
  margin-right: 35rpx;
}

.line1_right {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.item_line2 {
  font-size: 24rpx;
  color: #999;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  margin-right: 20rpx;
  margin-left: 5rpx;
}
