.container {
  background: #f8f8f8;
  height: 100vh;
  width: 100%;
}

.balance_view {
  height: 220rpx;
  background: #ff6b67;
}

.balance_tittle {
  color: white;
  font-size: 28rpx;
  margin-left: 30rpx;
  padding-top: 30rpx;
}

.balance_number {
  margin-top: 30rpx;
  margin-left: 30rpx;
  color: white;
  font-size: 80rpx;
}

.item_list {
  display: flex;
  flex-direction: column;
  background: white;
  height: 360rpx;
}

.each_item {
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item_left {
  width: 10%;
  margin-left: 30rpx;
}

.icon {
  height: 40rpx;
  width: 50rpx;
}

.item_middle {
  width: 80%;
}

.text {
  font-size: 30rpx;
  color: #333;
}

.item_right {
  line-height: 30rpx;
}

.next {
  height: 30rpx;
  width: 15rpx;
}

.split_line {
  height: 3rpx;
  background: #eee;
}
